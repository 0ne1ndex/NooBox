{
  "manifest_version": 2,
  "name": "NooBox",
  "short_name": "NB",
  "description": "A useful Toolbox!",
  "version": "0.1.7",
  "browser_action": {
    "default_icon": {
      "128": "images/icon_128.png"
    },
    "default_title": "NoooBox~~~",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "images/icon_128.png"
  },
  "options_page": "options.html",
  "background": {
    "scripts":["thirdParty/jquery.min.js","js/background.js"]
  },
  "content_scripts":[
    {
      "matches":[
        "http://*/*",
        "https://*/*"
      ],
      "js":["thirdParty/jquery.min.js","js/content.js"],
      "css":["css/converter.css"],
      "run_at":"document_idle"
    }
  ],
  "sandbox": {
    "pages":["crypter.html"]
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "http://*/*",
    "https://*/*",
    "storage"
  ]
}
